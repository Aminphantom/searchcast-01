// vercel.json
{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/public/(.*)", // برای سرو کردن فایل‌های استاتیک مثل آیکون و فونت
      "dest": "/public/$1"
    },
    {
      "src": "/api/image", // مسیر داینامیک عکس
      "dest": "/api/index.js"
    },
    {
      "src": "/api", // مسیر اصلی POST برای فریم
      "dest": "/api/index.js"
    },
    {
      "src": "/", // مسیر ریشه برای نمایش اولیه فریم
      "dest": "/api/index.js"
    }
  ],
  "public": true // نشان می‌دهد که پوشه public وجود دارد
}